// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "debian-openssl-3.0.x"]
}


model Facility {
  id              Int @id @default(autoincrement())
  code            Int @unique
  level           Int
  name            String
  typology        String
  typologySlug    String
  venue           String
  website         String?
  city            String?
  province        String?
  region          String
  regionSlug      String
  zipCode         String
  street          String?
  parentCode      Int?
  parentLevel     Int?
  parentRelationName String?
}
model Region {
  id    Int @id @default(autoincrement())
  name  String
  slug  String @unique
}

model Type {
  id    Int @id @default(autoincrement())
  name  String
  slug  String @unique
}
